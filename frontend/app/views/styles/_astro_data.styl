.astro-data
  background #151515
  padding 0
  display table
  width 100%
  height 100%
  font-family 'Carrois Gothic', 'Numans', sans-serif
  
  article
    float left
    margin-top 80px
    color #FAFAFA
    
    label
      letter-spacing 3px
      font-size 18px
    
    &.first
      width 25%
      padding 0 3%
    &.middle
      width 50%
    &.last
      width 25%
    input[type='range']
      -webkit-appearance none !important
      background #FAFAFA
      height 2px

    input[type='range']::-webkit-slider-thumb
      -webkit-appearance none !important
      background #FAFAFA
      height 20px
      width 6px
    
    &.image
      border 1px solid #FAFAFA

.histograms
  .histogram
    
    .axis
      fill none
      stroke white
      stroke-width 1px
  
    .tick
      font-size 11px
  
    rect
      &.i
        fill red
      &.r
        fill green
      &.g
        fill blue
