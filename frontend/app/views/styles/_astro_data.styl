
.astro-data
  background-color #151515
  background-image url('../images/astroviz-background.jpg')
  padding 0
  display table
  min-width 1200px
  width 100%
  height 100%
  font-family 'Carrois Gothic', 'Numans', sans-serif
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none
  
  .hero-unit
    padding-bottom 0
  
    .logo
      width 480px
      height 50px
      
  article
    float left
    color #FAFAFA
    
    label
      letter-spacing 3px
      font-size 18px
    
    &.first
      width 25%
      padding 0 1em 0
      
      table
        color #FAFAFA
        margin 100px 0
        
        td
          padding-right 10px
    &.middle
      width 50%
      padding-left 0px
      .annotation
        position absolute
        width 600px
        height 600px
      .image
        border 1px solid #FAFAFA
    &.last
      width 25%
    input[type='range']
      -webkit-appearance none !important
      background #FAFAFA
      height 2px

    input[type='range']::-webkit-slider-thumb
      -webkit-appearance none !important
      background #FAFAFA
      height 20px
      width 6px

.histograms
  .histogram
    
    .axis
      fill none
      stroke white
      stroke-width 1px
  
    .tick
      font-size 11px
  
    rect
      &.i
        fill red
      &.r
        fill green
      &.g
        fill blue
